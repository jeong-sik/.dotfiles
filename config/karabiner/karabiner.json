{
    "global": {
        "show_in_menu_bar": true,
        "show_profile_name_in_menu_bar": false
    },
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "ESC 누르면 영문(ABC) 강제 전환 + ESC 전송",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "escape"
                                },
                                "to": [
                                    {
                                        "select_input_source": {
                                            "input_source_id": "^com\\.apple\\.keylayout\\.ABC$"
                                        }
                                    },
                                    {
                                        "key_code": "escape"
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Cmd+o (tmux pane 전환) 영문 강제 전환",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "o",
                                    "modifiers": {
                                        "mandatory": ["command"]
                                    }
                                },
                                "to": [
                                    {
                                        "select_input_source": {
                                            "input_source_id": "^com\\.apple\\.keylayout\\.ABC$"
                                        }
                                    },
                                    {
                                        "key_code": "o",
                                        "modifiers": ["command"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "name": "Default profile",
            "selected": true,
            "simple_modifications": [],
            "virtual_hid_keyboard": {
                "keyboard_type_v2": "ansi"
            }
        }
    ]
}
